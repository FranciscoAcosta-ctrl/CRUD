<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!--Mis estilos-->
    <link rel="stylesheet" href="css/style.css">
    <!-- <link rel="stylesheet" href="../assets/css/style.css">-->
    <title>CRUD-PRUEBA</title>
</head>

<body>
    <!--Inicio de Formulario-->
    <div class="container mt-5">
        <div class="shadow-lg pb-3 mb-5 bg-body">
            <h4 class="title pt-3 mb-3 ps-5">NUEVO PRODUCTO</h4>
            <form action="/crear" method="POST">
                <div class="row align-items-center mr-5">
                    <div class="col-1"></div>
                    <div class="col-3 ms-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input id="nombre" name="nombre" type="text" class="form-control" required>
                    </div>
                    <div class="col-3 ms-1">
                        <label for="nombre" class="form-label">Precio</label>
                        <input id="precio" name="precio" type="text" class="form-control" required>
                    </div>
                    <div class="col-3 ms-1">
                        <label for="sku" class="form-label">SKU</label>
                        <input id="sku" name="sku" type="text" class="form-control" required>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row align-items-center mr-5 mt-3">
                    <div class="col-1"></div>
                    <div class="col-3 ms-3">
                        <label for="temporada" class="form-label">Temporada</label>
                        <input id="temporada" name="temporada" type="text" class="form-control" required>
                    </div>
                    <div class="col-3 ms-1">
                        <label for="imagen" class="form-label">Imagen</label>
                        <input id="imagen" name="imagen" type="text" class="form-control" required>
                    </div>
                    <div class="col-3 ms-1">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input id="cantidad" name="cantidad" type="text" class="form-control" required>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row align-items-center mr-5 mt-3">
                    <div class="col-4"></div>
                    <div class="col-1 ms-4 ">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="categoria" id="categoria" value="fruta">
                            <label class="form-check-label" for="categoria">
                                Frutas
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="categoria"
                                id="categoria" value="vegetal">
                            <label class="form-check-label" for="categoria">
                                Vegetales
                            </label>
                        </div>
                    </div>
                    <div class="col-4"></div>
                </div>
                <button type="submit" class="form-control btn btn-primary col ps-5 pe-5 mt-3"><i class="bi bi-save"> Agregar</i></button>
            </form>
        </div>
    </div>
    <!--Final de Formulario-->
    <!--Inicio Trabla-->
    <table id="tablaProductos" class="table">
        <thead>
            <tr>
                <th style="display:none;">#</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>SKU</th>
                <th>Temporada</th>
                <th>Imagen</th>
                <th>Cantidad</th>
                <th>Categoria</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach((producto)=>{ %>
                <tr>
                    <td style="display :none;"><%= producto._id %></td>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.precio %></td>
                    <td><%= producto.sku %></td>
                    <td><%= producto.temporada %></td>
                    <td><%= producto.imagen %></td>
                    <td><%= producto.cantidad %></td>
                    <td><%= producto.categoria %></td>
                    <td>
                        <a id="btnEditar" class="btnEditar btn btn-warning bi bi-pencil"></a>
                        <a href="/borrar/<%= producto._id %>" class="btn btn-danger bi bi-trash"></a>
                    </td>
                    <% }) %>

                </tr>
        </tbody>
    </table>
    <!--Final Tabla-->

    <!--Modal Editar-->
    <div class="modal fade" id="modalProductos" tabindex="-1" aria-labelledby="modalProductos" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Editar Producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/editar" method="POST">
                        <div class="row align-items-center mr-5">
                            <div class="col-1"></div>
                            <input name="id_editar" id="id_editar" type="text" hidden>
                            <div class="col-3 ms-3">
                                <label for="nombre_editar" class="form-label">Nombre</label>
                                <input id="nombre_editar" name="nombre_editar" type="text" class="form-control"
                                    value="">
                            </div>
                            <div class="col-3 ms-1">
                                <label for="precio_editar" class="form-label">Precio</label>
                                <input id="precio_editar" name="precio_editar" type="text" class="form-control"
                                    value="">
                            </div>
                            <div class="col-3 ms-1">
                                <label for="sku_editar" class="form-label">SKU</label>
                                <input id="sku_editar"  name="sku_editar" type="text" class="form-control" value="">
                            </div>
                            <div class="col-1"></div>
                        </div>
                        <div class="row align-items-center mr-5 mt-3 mb-3">
                            <div class="col-1"></div>
                            <div class="col-3 ms-3">
                                <label for="temporada_editar" class="form-label">Temporada</label>
                                <input id="temporada_editar"  name="temporada_editar" type="text" class="form-control" value="">
                            </div>
                            <div class="col-3 ms-1">
                                <label for="imagen_editar" class="form-label">Imagen</label>
                                <input id="imagen_editar"  name="imagen_editar" type="text" class="form-control" value="">
                            </div>
                            <div class="col-3 ms-1">
                                <label for="cantida_editar" class="form-label">Cantidad</label>
                                <input id="cantidad_editar"  name="cantidad_editar" type="text" class="form-control" value="">
                            </div>
                            <div class="col-1 "></div>
                        </div><div class="row align-items-center mr-5 mt-3 mb-3">
                            <div class="col-4"></div>
                            <div class="col-1 ms-4 ">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="categoria_editar"
                                        id="flexRadioDeFruta_editar" value="fruta">
                                    <label class="form-check-label" for="flexRadioDeFruta">
                                        Frutas
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="categoria_editar"
                                        id="flexRadioDeVegetal_editar" value="vegetal">
                                    <label class="form-check-label" for="flexRadioDeVegetal">
                                        Vegetales
                                    </label>
                                </div>
                            </div>
                            <div class="col-4"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Actualizar</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!--ModalFinal-->

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
    <!--Mi script-->

    <script src="js/code.js"></script>
</body>

</html>